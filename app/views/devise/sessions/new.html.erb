<div style="width:100%; height:514px;margin-bottom:-21px;margin-left:-20px;left:20px;margin-top:-20px;">
	<div id="Carousel" style="height:inherit;width:75%;border-top-left-radius:6px;border-bottom-left-radius:6px;">
		<div class="carousel-inner">
			<div class="active item">
				<%=image_tag(Movie.first.banner.url, :style => "border-top-left-radius:6px;border-bottom-left-radius:6px;")%>
				<div class="carousel-caption" style="border-bottom-left-radius:6px;">
					<h4>
						<%=Movie.first.title%>
					</h4>
				</div>
			</div>
			<%Movie.all.shuffle.each do |f|%>
				<div class="item">
					<%=image_tag(f.banner.url, :style => "border-top-left-radius:6px;border-bottom-left-radius:6px;")%>
					<div class="carousel-caption" style="border-bottom-left-radius:6px;">
						<h4>
							<%=f.title%>
						</h4>
					</div>
				</div>
			<%end%>

			
			<a class="carousel-control left" href="#Carousel" data-slide="prev">&lsaquo;</a>
			<a class="carousel-control right" href="#Carousel" data-slide="next">&rsaquo;</a>
		</div>

	</div>
	<div style="height:494px;width:22%;float:right;margin-top:-514px; padding-left:20px;">
		<h2>Sign in</h2>
		<%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => {:class => 'form-vertical' }) do |f| %>
		  <%= f.text_field :email, :autofocus => true, :placeholder => "email" %>
		  <%= f.password_field :password, :placeholder => "password" %>
		  <p>
		  	<%= f.check_box :remember_me, :style=>"margin-top:-2px" , :as => :boolean if devise_mapping.rememberable?%> Remember me?
		  </p>
		  		  <%= f.button :submit, "Sign in", :class => 'btn-primary' %>
		<% end %>
		<%= render "devise/shared/links" %>
	</div>
</div>


